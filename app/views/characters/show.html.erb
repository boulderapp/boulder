<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @character %>

    <%= link_to 'Edit this character', edit_campaign_character_path(@campaign, @character), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this character', campaign_character_path(@campaign, @character), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to characters', campaign_characters_path(@campaign), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
