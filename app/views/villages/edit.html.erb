<%= render partial: "shared/breadcrumbs", locals: { crumbs: [
    @campaign, 
    Crumb.new("Villages", campaign_villages_path(@campaign)),
    Crumb.new(@village.name, campaign_village_path(@campaign, @village))
] } %>
<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing village</h1>

  <%= render "form", village: @village %>

  <%= link_to "Show this village", [@campaign, @village], class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to villages", campaign_villages_path(@campaign), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
