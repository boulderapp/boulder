<div class="flex">
  <div class="my-5">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
  </div>
  <div class="ml-2 flex-grow" id="<%= dom_id character %>">
    <p class="mt-5 font-bold"><%= character.name %></p>
    <hr>

    <p class="my-5">
    <strong class="block font-medium mb-1">Bio:</strong>
    <%= character.bio %>
    </p>

    <% if action_name != "show" %>
      <%= link_to "Show this character", [character.campaign, character], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Edit this character', edit_campaign_character_path(character.campaign, character), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <hr class="mt-6">
    <% end %>
  </div>
</div>
